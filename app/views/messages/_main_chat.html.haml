.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-content
      .chat-main__group-info__left-content__group-name
        = @group.name
      .chat-main__group-info__left-content__join-member
        Memberï¼š
        %ul
          - @group.users.each do |user|
            %li= user.name
    .chat-main__group-info__button
      = link_to "EDIT", edit_group_path(current_user), class: "chat-main__group-info__edit-button"
  .chat-main__message-list
    .chat-main__message-list__message-container
      = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :body, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'